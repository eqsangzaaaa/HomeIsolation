<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"

    >
    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:id="@+id/layoutContainer" android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.03">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="วางนิ้วที่เครื่อง 'Arduino' เพื่อวัดค่า"
                    android:gravity="center"
                    android:textSize="15dp"
                    />


                    <TextView
                        android:id="@+id/heart_rate"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="HeartRate"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="35dp"
                        android:padding="10dp"
                        android:background="@drawable/ic_baseline_circle_24"
                        />

                    <TextView
                        android:id="@+id/spo2"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/heart_rate"
                        android:layout_toRightOf="@+id/heart_rate"
                        android:background="@drawable/ic_baseline_circle_24_blue"
                        android:gravity="center"
                        android:text="SpO2"
                        android:textColor="#000000"
                        android:textSize="35dp" />


                <Button
                    android:id="@+id/sendData"
                    android:text="ส่งข้อมูล"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </Button>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="ระดับสีของ Spo2 บ่งบอกอาการ"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00ff00"
                        android:text="สีเขียว"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ปกติ"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffa500"
                        android:text="สีส้ม"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" สังเกตุอาการ
หากมีอาการ แน่นหน้าอก, หายใจเร็ว, หายใจไม่อิ่ม, รู้สึกสับสนมึนงง \nกรุณาโทร 02 574 5000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:text="สีแดง"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" กรุณาโทร 02 574 5000"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="ระดับสีของ HeartRate บ่งบอกอาการ"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00ff00"
                        android:text="สีเขียว"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" ปกติ"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffa500"
                        android:text="สีส้ม"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" สังเกตุอาการ 5-10 นาที แล้ววัดซ้ำ"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:text="สีแดง"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" กรุณาโทร 02 574 5000"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.03">
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>